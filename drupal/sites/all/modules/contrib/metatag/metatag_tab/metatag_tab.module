<?php

/**
 * Implements hook_ctools_plugin_api().
 */
function metatag_tab_ctools_plugin_api($owner, $api) {
  if ($owner == 'metatag' && $api == 'metatag') {
    return array('version' => 1);
  }
}

/**
 * Implements hook_theme().
 */
function metatag_tab_theme() {
  $info['metatag_tab'] = array(
    'render element' => 'element',
  );

  return $info;
}

/**
 * Theme callback for a TAB  meta tag.
 */
function theme_metatag_tab($variables) {
  $element = &$variables['element'];
  element_set_attributes($element, array('#name' => 'property', '#value' => 'content'));
  unset($element['#value']);
  return theme('html_tag', $variables);
}

include_once('metatag_tab.token.inc');