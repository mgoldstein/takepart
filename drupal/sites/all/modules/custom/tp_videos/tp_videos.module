}

function tp_videos_test_version_5($form, &$form_state) {

  $video_url = variable_get('tp_videos_test', 'http://video.takepart.com/videos/YWWSR44k-3Ap37bHw.mp4');

  if (!empty($video_url)) {
    $form['video'] = array(
      '#markup' => '<embed flashvars="file='. rawurlencode($video_url) . '&autostart=true" allowfullscreen="true" allowscriptaccess="always" id="player1" name="player1" src="/sites/all/modules/custom/tp_videos/player.swf" width="480" height="270" />',
      '#type' => 'markup',
    );
  }

  $form['dump'] = array(
    '#markup' => print_r($form_state, true),
  );

  $form['video_url'] = array(
    '#type' => 'textfield',
    '#title' => 'URL',
    '#default_value' => $video_url,
  );

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => 'Update',
    '#submit' => array('tp_videos_test_version_5_submit'),
  );

  return $form;
}

function tp_videos_test_version_5_submit($form, $form_state) {
  variable_set('tp_videos_test', $form_state['values']['video_url']);
}

