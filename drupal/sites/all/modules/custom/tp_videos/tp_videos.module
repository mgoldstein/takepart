      'page callback' => 'drupal_get_form',
      'page arguments' => array('tp_videos_test_version_5'),
      'access callback' => 'tp_videos_access',
    ),
    'api/video-test-jw6' => array(
      'title' => 'JW Player 6 Video Test',
      'page callback' => 'tp_videos_test_version_6',
      'access callback' => 'tp_videos_access',
    ),
