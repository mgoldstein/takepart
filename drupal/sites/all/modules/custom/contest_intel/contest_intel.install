/**
 * Implements hook_schema().
 */
function contest_intel_schema() {
  $schema = array();

  $schema['contest_intel_votes'] = array(
    'description' => 'List of votes for Intel contest.',
    'fields' => array(
      'id' => array(
        'description' => 'Primary key identifier for the vote.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'email' => array(
        'description' => "The user's email.",
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'token' => array(
        'description' => "The user's choice.",
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'timestamp' => array(
        'description' => 'The Unix timestamp when the vote was cast.',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'primary key' => array('id'),
    'indexes' => array(
      'email' => array('email'),
    ),
  );

  return $schema;
}

/**
 * Add the vote tracking table.
 */
function contest_intel_update_7100() {
  $schema = contest_intel_schema();
  db_create_table('contest_intel_votes',
    $schema['contest_intel_votes']);
}
