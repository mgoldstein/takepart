/***
 * implentation of hook_init()
 */
function unipop_init() {
  $path = drupal_get_path('module', 'unipop');
  drupal_add_css($path . '/css/unipop.css', array('every_page' => TRUE));
  drupal_add_js($path . '/js/unipop.js', 'file');
}



