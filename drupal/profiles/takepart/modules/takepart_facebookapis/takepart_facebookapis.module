function _takepart_facebookapis_get_user_session() {
  if (!isset($_SESSION['facebook'])) {
    $app_id = variable_get('fboauth_id', '');
    $app_secret = variable_get('fboauth_secret', '');
    $cookie = _takepart_facebookapis_get_facebook_cookie($app_id, $app_secret);
    if (isset($cookie['access_token'])) {
      $result = fboauth_graph_query('/me', $cookie['access_token']);
      $_SESSION['facebook'] = $result;
      return $result;
    } else {
      return array();
    }
  } else {
    return $_SESSION['facebook'];
  }
}

function _takepart_set_takeaction_cookie($cookie) {
    $secret = variable_get('takeaction_api_secret', 'SWaW8s9K');
    if (function_exists('mcrypt_encrypt')) {
        // Encrypt the GUID
        $plaintext = $cookie['access_token'];
        $iv = substr(md5(md5($secret)), 0, 16);
        $encrypted = mcrypt_encrypt(
          MCRYPT_RIJNDAEL_128,  // The cipher to use
          md5($secret),         // The encryption key (it is recommended to use a hash of of the secret)
          $plaintext,           // The value to encrypt
          MCRYPT_MODE_CBC,      // Encryption mode one of ("ecb", "cbc", "cfb", "ofb", "nofb" or "stream")
          $iv                   // Initialization vector used for CBC mode
        );
        // Base64 encode the encrypted GUID so it is a safe string
        $encoded = base64_encode($encrypted);
        $session_cookie = variable_get('takeaction_session_cookie_name', 'TAKEACTIONSESSION') . 'FB';
        $path = variable_get('takeaction_session_cookie_path', '/');
        $domain = variable_get('takeaction_session_cookie_domain', '.takepart.com');
        setcookie($session_cookie, $encoded, 0, $path, $domain);
    } else {
        watchdog('takepart_facebookapis', 'mcrypt_encrypt is not installed, failed to set cookie', $session_cookie);
    }
}


function _takepart_delete_takeaction_cookie() {
  $session_cookie = variable_get('takeaction_session_cookie_name', 'TAKEACTIONSESSION') . 'FB';
  setcookie($session_cookie,'',time()-3600);
}

