/**
 * User access callback for petitions
 */
function petition_access($op, $entity, $account, $entity_type) {
  // Block unknown operations.
  if (in_array($op, array('administer', 'view', 'update', 'create', 'delete'))) {
    return user_access("$op petition $entity_type", $account) ||
      user_access("administer petition $entity_type", $account);
  }
  return FALSE;
}

