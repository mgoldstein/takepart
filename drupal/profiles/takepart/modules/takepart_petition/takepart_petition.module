/**
 * Implements hook_block_info().
 */
function takepart_petition_block_info() {
  // Return a block for each petition form in the system
  $blocks = array();
  foreach (takepart_petition_forms() as $name => $petition_form) {
    $blocks[$name] = array(
      'info' => $petition_form->label,
    );
  }
  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function takepart_petition_block_view($delta = '') {
  // Return the petition form
  $form = takepart_petition_forms($delta);
  return array(
    'subject' => $form->label,
    'content' => drupal_get_form('_takepart_petition_sign_petition_form', $form),
  );
}

