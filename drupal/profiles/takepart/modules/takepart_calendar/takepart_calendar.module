/**
 * Implements hook_field_widget_error().
 */
function takepart_calendar_widget_error($element, $error, $form, &$form_state) {
  switch ($error['error']) {
    case 'takepart_calendar_invalid':
      form_error($element, $error['message']);
      break;
  }
}


