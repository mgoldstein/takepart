/*
 * Menu callback for RSS:
 */
function _takepart_calendar_rss($node) {
  //Example:
  $content = node_load('20673');
  $json = $content->field_calendar['und'][0]['takepart_calendar'];
  preg_match("/\[([^\]]+)\]/", $json, $match);
  if($match[1]) {
    $json = $match[1];
    //rem last comma:
    //@todo, find position:
    if(substr($json, strlen($json)-2, strlen($json)) ==', ') {
      $json = substr($json, 0, strlen($json)-2); 
    } 
    //@todo, find out why load fails:
    $jdata = json_decode($json);
    $xml = new SimpleXMLElement('<rss/>');
    array_walk_recursive($jdata, array ($xml, 'addChild'));
    echo $xml->asXML();
  }
  exit();
}


