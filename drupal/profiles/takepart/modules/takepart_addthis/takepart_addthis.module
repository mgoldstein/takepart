/**
 * Implements hook_field_formatter_view().
 */
function takepart_addthis_field_formatter_view($entity_type, $entity, $field,
  $instance, $langcode, $items, $display) {

  $element = array();
  $settings = $display['settings'];

  $configurations = array();
  $name = str_replace('_', '-', $field['field_name']);

  $variables = array(
    'orientation' => $settings['orientation'] == 'vertical'
    ? 'share-bar-vertical' : 'share-bar-horizontal',
  );

  foreach ($items as $delta => $item) {

    $variables['id'] = "share-bar-{$name}-{$delta}";

    // Transfer the AddThis configurations to JavaScript settings.
    $id = $variables['id'];
    $configurations[$id] = array(
      'alternate_url' => isset($item['alternate_url'])
      ? $item['alternate_url'] : '',
      'twitter_message' => isset($item['twitter_message'])
      ? $item['twitter_message'] : '',
      'email_message' => isset($item['email_message'])
      ? $item['email_message'] : '',
    );

    if ($display['type'] === 'full_button_bar') {
      $element[$delta] = theme('takepart_addthis_full_page_button_bar',
        $variables);
    }
    else {
      $element[$delta] = theme('takepart_addthis_thank_you_button_bar',
        $variables);
    }
  }

  drupal_add_js(array('addthis' => array(
    'fields' => $configurations,
  )), 'setting');

  $js_path = drupal_get_path('module', 'takepart_addthis')
    . '/js/share-bar-field.js';
  drupal_add_js($js_path, array('type' => 'file'));

  return $element;
}

function theme_takepart_addthis_full_page_button_bar($variables) {

  return array(
    '#type' => 'container',
    '#attributes' => array(
      'class' => array('share-bar-field', $variables['orientation']),
      'id' => $variables['id'],
    ),
    'toolbox' => array(
      '#type' => 'container',
      '#attributes' => array(
        'class' => array(
          'addthis_toolbox',
          'addthis_default_style',
        ),
      ),
      'facebook' => array(
        '#type' => 'markup',
        '#markup' => '<a class="addthis_button_facebook"></a>',
      ),
      'twitter' => array(
        '#type' => 'markup',
