function takepart_custom_install() {
  // set the admin theme to rubik and allow it for node edits
  variable_set("admin_theme", "rubik");
  variable_set("node_admin_theme", '1');
  
  // populate menus with default items.
  //_takepart_custom_populate_main_menu();
  _takepart_custom_populate_hottopics_menu();
  _takepart_custom_populate_friedsoftakepart_menu();
  _takepart_custom_populate_topics_menu();
  _takepart_custom_populate_filmcampaigns_menu();
  _takepart_custom_populate_corporatelinks_menu();
  
  menu_cache_clear_all();
}

/**
 * Add the main menu.
 */
function takepart_custom_update_7000() {
  $main_menu = menu_tree_page_data('main-menu');
  if (empty($main_menu)) {
    _takepart_custom_populate_main_menu();
  }
}

/**
 * Set default settings for wysiwyg module.
 *
 */
function takepart_custom_update_7001() {
  
  $settings = array(
    'default' => 1,
    'user_choose' => 1,
    'show_toggle' => 1,
    'theme' => 'advanced',
    'language' => 'en',
    'buttons' => array(
      'default' => array(
        'Bold' => 1,
        'Italic' => 1,
        'Underline' => 1,
        'Strike' => 1,
        'JustifyLeft' => 1,
        'JustifyCenter' => 1,
        'JustifyRight' => 1,
        'BulletedList' => 1,
        'NumberedList' => 1,
        'Undo' => 1,
        'Redo' => 1,
        'Link' => 1,
        'Unlink' => 1,
        'Anchor' => 1,
        'Superscript' => 1,
        'Subscript' => 1,
        'Blockquote' => 1,
        'Source' => 1,
        'HorizontalRule' => 1,
        'Cut' => 1,
        'Copy' => 1,
        'Paste' => 1,
        'PasteText' => 1,
        'PasteFromWord' => 1,
        'RemoveFormat' => 1,
        'SpecialChar' => 1,
        'Table' => 1,
        'Maximize' => 1,
        'Styles' => 1,
      ),
      'imce' => array(
        'imce' => 1,
      ),
      'drupal' => array(
        'media' => 1, // Media Browser
      ),
    ),
    'toolbar_loc' => 'top',
    'toolbar_align' => 'left',
    'path_loc' => 'bottom',
    'resizing' => 1,
    'verify_html' => 1,
    'preformatted' => 0,
    'convert_fonts_to_spans' => 1,
    'remove_linebreaks' => 1,
    'apply_source_formatting' => 0,
    'paste_auto_cleanup_on_paste' => 1,
    'block_formats' => 'p,address,pre,h2,h3,h4,h5,h6,div',
    'css_setting' => 'self',
    'css_path' => '/profiles/custom/themes/takepart3/css/wysiwyg.css',
    'css_classes' => '',
  );
  
  $fields = array(
    'editor' => 'ckeditor',
    'settings' => serialize($settings),
    'format' => 'full_html'
  );

  db_insert('wysiwyg')
    ->fields($fields)
    ->execute();
  
  $filter_perms = array('use text format full_html');
  
  // replace with set role ids once we are saving the role, if ever.
  $contrib_role = user_role_load_by_name('contributor');
  $author_role  = user_role_load_by_name('author');
  $editor_role  = user_role_load_by_name('editor');
  $layout_role  = user_role_load_by_name('layout editor');
  
  user_role_grant_permissions($contrib_role->rid, $filter_perms);
  user_role_grant_permissions($author_role->rid, $filter_perms);
  user_role_grant_permissions($editor_role->rid, $filter_perms);
  user_role_grant_permissions($layout_role->rid, $filter_perms);
  
 }

