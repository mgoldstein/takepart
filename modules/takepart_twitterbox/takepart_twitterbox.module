<?php

/**
 * Implements hook_init().
 */
function takepart_twitterbox_init() {
  $css_path = drupal_get_path('module', 'takepart_twitterbox') . '/takepart_twitterbox_feed.css';
  drupal_add_css($css_path);
}


/*
 * Implements hook_theme
 */
function takepart_twitterbox_theme() {
  return array(
    'takepart_twitter_feed' => array(
      'arguments' => array('tweets' => NULL, 'twitkey' => NULL, 'title' => NULL),
      'template' => 'takepart_twitterbox_feed'
    ),
  );
}

/*
 *  Creates a Drupal block that displays the five most recent tweets by user TakePart
 */
function takepart_twitterbox_twitter_pull_blocks() {
  return array(
    0 => (object) array(
      'delta' => 'takepart_twitterbox_0',
      'tweetkey' => '@TakePart',
      'title' => 'TakePart Twitter Feed',
      'name'  => 'TakePart Twitter Feed',   
      'number_of_items' => 5,
      'theme_key' => 'takepart_twitter_feed',   
    )
  );
}

