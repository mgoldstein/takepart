/**
 * Implements hook_ctools_plugin_api().
 */
function takepart_screaming_boxes_ctools_plugin_api($module, $api) {
  if ($module == 'boxes' && $api == 'plugins') {
    return array('version' => 1);
  }
}

/**
 * Implements hook_boxes_plugins().
 */
function takepart_screaming_boxes_boxes_plugins() {
  $info = array();
  $path = drupal_get_path('module', 'takepart_screaming_boxes') . '/plugins';
  $info['headline'] = array(
    'title' => 'Screaming Headline',
    'handler' => array(
      'parent' => 'box',
      'class' => 'boxes_headline',
      'file' => 'takepart_screaming_headline.inc',
      'path' => $path,
    ),
  );
  return $info;
}
/**
 * Implements hook_boxes_preview_callback().
 */
function takepart_screaming_boxes_preview_callback($form, $form_state) {
  return $form['options']['tp_screaming_headline_preview'];
}
/**
 * Implements hook_access_admin().
 * Access check for whether current user should be able to administer screaming headline.
 */
function taakepart_screaming_boxes_access_admin() {
  return user_access('administer screaming headline') || (module_exists('spaces') && spaces_access_admin());
}

/**
 * Implements hook_permission().
 */
function takepart_screaming_boxes_permission() {
  return array(
    'edit screaming headline' => array(
      'title' => t('Edit screaming headline'),
      'description' => t('Allows users with this permission to edit the screaming headline on a given page.'),
    ),
    'administer screaming headline' => array(
      'title' => t('Administer screaming headline'),
      'description' => t('Allows users with this permission to fully administer the screaming headline functionality.'),
    ),
  );
}