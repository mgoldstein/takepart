<?php

/**
 * Implements hook_ctools_plugin_api().
 */
function takepart_screaming_boxes_ctools_plugin_api($module, $api) {
  if ($module == 'boxes' && $api == 'plugins') {
    return array('version' => 1);
  }
}

/**
 * Implements hook_boxes_plugins().
 */
function takepart_screaming_boxes_boxes_plugins() {
  $info = array();
  $path = drupal_get_path('module', 'takepart_screaming_boxes') . '/plugins';
  $info['headline'] = array(
    'title' => 'Screaming Headline',
    'handler' => array(
      'parent' => 'box',
      'class' => 'boxes_headline',
      'file' => 'takepart_screaming_headline.inc',
      'path' => $path,
    ),
  );
  return $info;
}

function takepart_screaming_boxes_preview_callback($form, $form_state) {
  return $form['options']['tp_screaming_headline_preview'];
}

